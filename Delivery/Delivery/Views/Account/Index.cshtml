@model List<User>

@{
    ViewBag.Title = "All users";
}

<table class="table table-striped">
    <thead class="table-dark">
    <tr>
        <th>Пользователи</th>
        <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var a in Model)
    {
        <tr>
            <td>
                <img src="@a.Avatar" alt="User avatar" class="rounded-circle me-2 comment-user-avatar">
                <strong class="mb-0">@a.UserName</strong>
            </td>
            <td>
                @if (a.Id != 1)
                {
                        <a asp-action="RevokeAdminRole" asp-route-userId="@a.Id" class="btn btn-outline-dark ml-1">Убрать роль админа</a>
                        <a asp-action="GrantAdminRole" asp-route-userId="@a.Id" class="btn btn-outline-dark ml-1">Дать роль админа</a>
                        <a asp-action="DeleteUser" asp-route-userId="@a.Id" class="btn btn-outline-dark ml-1">Удалить пользователя</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>